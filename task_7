#include <stdarg.h>
#include <stdio.h>

/**
 * my_printf - a printf function with flag character handling
 * @format: The format string
 * @...: Variable arguments
 */
void my_printf(const char *format, ...) {
    va_list args;
    va_start(args, format);

    while (*format != '\0') {
        if (*format == '%') {
            format++;

            // Handle flag characters
            int flag_plus = 0;
            int flag_space = 0;
            int flag_hash = 0;

            while (*format == '+' || *format == ' ' || *format == '#') {
                if (*format == '+') {
                    flag_plus = 1;
                } else if (*format == ' ') {
                    flag_space = 1;
                } else if (*format == '#') {
                    flag_hash = 1;
                }
                format++;
            }

            // Handle conversion specifiers
            if (*format == 'd' || *format == 'i') {
                int num = va_arg(args, int);
                if (flag_plus && num >= 0) {
                    putchar('+');
                } else if (flag_space && num >= 0) {
                    putchar(' ');
                }
                printf("%d", num);
            } else if (*format == 'x') {
                unsigned int num = va_arg(args, unsigned int);
                if (flag_hash) {
                    printf("0x");
                }
                printf("%x", num);
            } else if (*format == 'X') {
                unsigned int num = va_arg(args, unsigned int);
                if (flag_hash) {
                    printf("0X");
                }
                printf("%X", num);
            } else {
                putchar(*format);
            }
        } else {
            putchar(*format);
        }
        format++;
    }

    va_end(args);
}

/**
 * main - Entry point
 * Return: Always 0
 */
int main(void) {
    my_printf("\n");
    my_printf("Decimal with + flag: %+d\n", 42);
    my_printf("Decimal with space flag: % d\n", -42);
    my_printf("Hex with # flag: %#x\n", 255);
    my_printf("Uppercase Hex with # flag: %#X\n", 255);
    return 0;
}
