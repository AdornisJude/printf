#include <stdarg.h>
#include <stdio.h>
#include <string.h>

/**
 * print_reversal - Print the reversed version of a string
 * @str: The input string to reverse and print
 */
void print_reversal(const char *str) {
    for (int i = strlen(str) - 1; i >= 0; i--) {
        putchar(str[i]);
    }
}

/**
 * my_printf - Custom printf function with a custom reversed conversion specifier
 * @format: The format string
 * @...: Variable arguments
 */
void my_printf(const char *format, ...) {
    va_list args;
    va_start(args, format);

    while (*format != '\0') {
        if (*format == '%' && (*(format + 1) == 'r')) {
            format += 2;
            const char *input_str = va_arg(args, const char *);
            print_reversal(input_str);
        } else {
            putchar(*format);
            format++;
        }
    }

    va_end(args);
}

/**
 * main - Entry point
 * Return: Always 0
 */
int main(void) {
    my_printf("\n");
    my_printf("Reversed: %r\n", "tool");
    return 0;
}
